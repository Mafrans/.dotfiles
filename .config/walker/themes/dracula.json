{
  "ui": {
    "anchors": {
      "bottom": true,
      "left": true,
      "right": true,
      "top": true
    },
    "fullscreen": false,
    "window": {
      "box": {
        "h_align": "center",
        "v_align": "center",
        "orientation": "vertical",
        "scroll": {
          "list": {
            "always_show": true,
            "item": {
              "activation_label": {
                "h_align": "end",
                "h_expand": true,
                "justify": "right",
                "x_align": 1
              },
              "icon": {
                "theme": "Papirus"
              },
              "spacing": 5,
              "text": {
                "h_align": "fill",
                "h_expand": true,
                "revert": true
              }
            },
            "max_height": 350
          },
          "overlay_scrolling": false
        },
        "search": {
          "spacing": 10,
          "v_align": "start"
        },
        "spacing": 10
      },
      "h_align": "fill",
      "v_align": "fill"
    }
  }
}
